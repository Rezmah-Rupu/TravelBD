<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_editor_absoluteX="1dp"
    app:layout_editor_absoluteY="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/TavelBD_home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAVEL BD"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:fontFamily="@font/pacifico"
           android:layout_centerInParent="true"
            />

        <ImageView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/Hamburger_menu_home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_menu_bar"
            android:layout_alignParentLeft="true" />

        <ImageView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/profile_home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_person"
            android:layout_alignParentRight="true" />

        <ImageView
            app:layout_constraintHorizontal_weight="1"
            android:id="@+id/notifaction_home_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notification"
            android:scaleType="center"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/profile_home_id"
            android:layout_toStartOf="@+id/profile_home_id"
            android:layout_marginRight="20dp"

            />
    </RelativeLayout>




<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/heritage"
        android:scaleType="centerCrop"/>

   <RelativeLayout
     android:layout_weight="1"
       android:layout_width="0dp"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/hotel_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best Western Heritage"
        android:textColor="@color/black"
           android:gravity="center"
        android:textStyle="bold"
           android:layout_centerInParent="true"
           android:layout_alignParentTop="true"
           android:layout_marginLeft="5dp"
           android:layout_alignParentLeft="true"/>
       <TextView
           android:id="@+id/star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5&#11088;"
           android:textSize="10sp"
           android:gravity="center"
           android:layout_marginLeft="5dp"
          android:layout_alignTop="@id/hotel_name_id"
           android:layout_alignBottom="@id/hotel_name_id"
           android:layout_toRightOf="@+id/hotel_name_id"
           android:layout_marginRight="10dp" />

       <TextView
           android:id="@+id/text1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Situated on the beachfront and offering a 24-hour front desk, Hotel Sea Crown is located just 1.5 km from the....show more"
           android:layout_below="@id/hotel_name_id"
           android:layout_marginLeft="5dp"
           android:textColor="@color/black"
              android:textSize="8sp"
           android:textAlignment="center"
android:layout_marginRight="20dp"
           />
       <TextView
           android:layout_marginTop="10dp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Price: BDT 5,000"
           android:textColor="@color/black"
       android:layout_below="@id/text1"
       android:textSize="10dp"
           android:textStyle="bold"
           android:layout_alignLeft="@+id/text1"
           android:layout_alignRight="@+id/text1"
           android:gravity="center" />


   </RelativeLayout>

</LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/heritage"
                android:scaleType="fitXY"/>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/sayman1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sayman"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/sayman_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5&#11088;"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_alignTop="@id/sayman1"
                    android:layout_alignBottom="@id/sayman1"
                    android:layout_toRightOf="@+id/sayman1"
                    android:layout_marginRight="10dp" />

                <TextView
                    android:id="@+id/sayman_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Situated on the beachfront and offering a 24-hour front desk, Hotel Sea Crown is located just 1.5 km from the....show more"
                    android:layout_below="@id/sayman_star2"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:textSize="8sp"
                    android:textAlignment="center"
                    android:layout_marginRight="20dp"
                    />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sayman_text2"
                    android:layout_alignLeft="@+id/sayman_text2"
                    android:layout_alignRight="@+id/sayman_text2"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Price: BDT 5,000"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold"


                    />


            </RelativeLayout>

        </LinearLayout>












    </LinearLayout>
    
</ScrollView>