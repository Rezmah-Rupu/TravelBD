<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcome">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textStyle="bold"
            android:textColor="#1F615B"
            android:textSize="40sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="100dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to Travel BD"
            android:textAlignment="center"
            android:textColor="#1F615B"
            android:layout_marginBottom="110dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The journey of a thousand miles begins with just one step."
            android:textStyle="bold"
            android:textColor="#1F615B"
            android:textSize="10sp"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="500dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Let's Begin!"
            android:textAlignment="center"
            android:textColor="#1F615B"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am Interested in Traveling"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="110dp"
            android:layout_margin="20dp"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am a Manager"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="110dp"
            android:layout_margin="20dp"
            android:textSize="15sp"/>

</LinearLayout>