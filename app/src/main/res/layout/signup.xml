<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#98CBF4"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:text="Create an account"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="15dp"
        android:textSize="30sp"
        android:textStyle="bold">

    </TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:background="@color/white"
        android:stretchColumns="1"
        android:layout_marginTop="10dp"

        >

        <TableRow
            android:id="@+id/row1"
            android:padding="4dp"
            android:layout_weight="1"
            >
            <TextView
                android:text="Name:"
                android:textSize="18sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/name"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="enter name"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>

        </TableRow>
        <TableRow
            android:id="@+id/row2"
            android:padding="4dp"
            android:layout_weight="1"
            >
            <TextView
                android:text="Email:"
                android:textSize="18sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/email"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="abc@yahoo.com"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>

        </TableRow>
        <TableRow
            android:id="@+id/row3"
            android:padding="4dp"
            android:layout_weight="1"
            >
            <TextView
                android:text="Phone"
                android:textSize="18sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/phone"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="phone"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>

        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:padding="4dp"
            android:layout_weight="1">

            <TextView
                android:text="User name:"
                android:textColor="@color/black"
                android:textSize="18sp">

            </TextView>

            <EditText
                android:id="@+id/userid"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="user name"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/row5"
            android:padding="4dp"
            android:layout_weight="1">
            <TextView
                android:text="Pssword:"
                android:textSize="18sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/pass"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="set password"
                android:inputType="textPassword|numberPassword"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>

        </TableRow>
        <TableRow
            android:id="@+id/row6"
            android:padding="4dp"
            android:layout_weight="1">
            <TextView
                android:text="Re-enter Password:"
                android:textSize="18sp"
                android:textColor="@color/black"
                >

            </TextView>

            <EditText
                android:id="@+id/repass"
                android:layout_weight="1"
                android:height="0dp"
                android:hint="confirm password"
                android:inputType="textPassword|numberPassword"
                android:textColor="@color/black"
                android:textSize="18sp">

            </EditText>

        </TableRow>

        <CheckBox
            android:id="@+id/chechbox_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remember User Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"></CheckBox>

        <CheckBox
            android:id="@+id/checkbox_userpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Remember Password"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="visible"></CheckBox>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/white"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="By tapping sign up and accept, you acknowledge that you have read the Privacy Policy and agree to the Terms of service."
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                >

            </TextView>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:text="Sign up &amp; Accept"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="#2196F3"
                android:layout_marginBottom="10dp"
                >

            </Button>

        </LinearLayout>

    </TableLayout>

</LinearLayout>