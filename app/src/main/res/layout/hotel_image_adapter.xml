<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/lay_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/bottom_shade"
        android:foreground="?attr/selectableItemBackground"
        >

        <ImageView
            android:id="@+id/card_image_id"
            android:layout_width="130dp"
            android:layout_height="135dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

           <LinearLayout
android:layout_marginTop="5dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/cardText_id"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingLeft="10dp"
                   android:paddingRight="10dp"
                   android:paddingTop="2dp"
                   android:paddingBottom="2dp"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:text="hotel name"
                   android:textColor="@color/black"
                   android:textSize="15sp"
                   android:textStyle="bold" />


           </LinearLayout>
            <TextView

                android:id="@+id/hote_star_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="star"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textStyle="bold"
                android:paddingBottom="2dp"/>
            <TextView
                android:id="@+id/location_id_hotel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="location"
                android:ellipsize="end"
                android:textSize="12sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

 <TextView
                android:id="@+id/price_hotel_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="price"
     android:ellipsize="end"
     android:maxLines="1"
                android:textSize="15sp"
     android:textStyle="bold"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/hotel_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="hotel description"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="20sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"

                />
            <TextView
                android:id="@+id/contact_iddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="hotel contact"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"

                />




        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>