<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hotels"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="5">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter name for image"
        android:id="@+id/editText_image_btn"
        android:layout_weight="0.25" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter hotel star"
        android:id="@+id/edittex_hotel_star"
        android:layout_below="@+id/editText_image_btn"
        android:layout_weight="0.25"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter location"
        android:id="@+id/edittex_loaction"
        android:layout_below="@+id/edittex_hotel_star"
        android:layout_weight="0.25"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter price per day"
        android:id="@+id/edittex_pricehotel"
        android:layout_below="@+id/edittex_loaction"
        android:layout_weight="0.25"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Enter descriptiony"
        android:id="@+id/edittex_des_hotel"
        android:layout_below="@+id/edittex_pricehotel"
        android:layout_weight="0.25"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/image_ide"
        android:layout_below="@+id/edittex_des_hotel"
        android:layout_weight="2" />

    <Button
        android:id="@+id/select_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#E1DEDE"
        android:gravity="center"
        android:text="Chose Image"
        android:textColor="@color/black"
        android:textSize="25sp" />
</RelativeLayout>






    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.16"
        android:layout_gravity="center"
        android:id="@+id/progreess_id"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.17"
            android:id="@+id/save_btn_idd"
            android:text="Save Image"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="0.17"
            android:id="@+id/display_btn_idd"
            android:text="Display"
            />
    </LinearLayout>



</LinearLayout>